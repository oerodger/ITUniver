@model Docflow.Models.FolderViewModel

@{
    var title = Model.CurrentFolder != null ? Model.CurrentFolder.Name : "";
    ViewBag.Title = title;
}

<h2>@title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
