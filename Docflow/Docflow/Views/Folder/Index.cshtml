            Автор изменения
        </th>
        <th></th>
    </tr>
    @if (Model.Parent != null)
    {
        <tr>
            <td>
                @Html.ActionLink("/...", "Index", new { id = Model.Parent.Id })
            </td>
            <td>
                
            </td>
            <td>
                
            </td>           
        </tr>
    }
